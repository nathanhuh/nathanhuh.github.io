---
layout: base.njk
noPadding: true
---

<article class="container max-w-3xl py-12">
    <header class="mb-8 border-b border-[#e5e5e5] pb-8">
        <h1 class="text-4xl font-bold tracking-tight mb-4">{{ title }}</h1>
        <div class="flex items-center gap-4 text-sm text-[#666666]">
            <time datetime="{{ date | date('YYYY-MM-DD') }}">
                {{ date | date('MMMM DD, YYYY') }}
            </time>
            {% if tags %}
            <div class="flex gap-2">
                {% for tag in tags %}
                <span class="px-2 py-1 bg-[#f5f5f5] rounded text-xs">{{ tag }}</span>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>

    <div class="prose prose-lg max-w-none">
        {{ content | safe }}
    </div>

    <footer class="mt-12 pt-8 border-t border-[#e5e5e5]">
        <a href="/blog/" class="text-sm text-[#666666] hover:text-[#1a1a1a] transition-colors duration-200">
            ‚Üê Back to all posts
        </a>
    </footer>
</article>
